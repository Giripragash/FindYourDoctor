<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,SpUsage" >

    <TextView
        android:id="@+id/txt_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Smart HealthCare System"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Button01"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ad_doc_view"
        android:layout_below="@+id/ad_doc_view"
        android:layout_marginTop="40dp"
        android:text="Patients  Details"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ad_doc_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_home_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Doctors Details"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/staffdet"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_below="@+id/Button01"
        android:layout_marginTop="37dp"
        android:text="Staff Details"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>